# ============================================================================
# SweetMoney - Environment Variables
# ============================================================================
# Copy this file to .env and adjust values for your environment
# Default values are optimized for production use

# ----------------------------------------------------------------------------
# DATABASE
# ----------------------------------------------------------------------------
# Path to SQLite database file (inside container: /app/db/db.sqlite3)
DB_PATH=/app/db/db.sqlite3

# ----------------------------------------------------------------------------
# WEB SERVER (Gunicorn)
# ----------------------------------------------------------------------------
# Number of worker processes
# Recommended: (CPU cores Ã— 2) + 1
# Examples: 2 cores = 5 workers | 4 cores = 9 workers | 8 cores = 17 workers
GUNICORN_WORKERS=5

# Request timeout in seconds
# Increase if you have slow operations (reports, exports)
GUNICORN_TIMEOUT=30

# Bind address (default: 0.0.0.0:8000)
# Change only if you need a different port inside the container
GUNICORN_BIND=0.0.0.0:8000

# ----------------------------------------------------------------------------
# WEBSOCKET SERVER (Daphne)
# ----------------------------------------------------------------------------
# Port for WebSocket connections (real-time updates)
# Default: 8001 (mapped internally by the application)
DAPHNE_PORT=8001

# ----------------------------------------------------------------------------
# DJANGO SETTINGS
# ----------------------------------------------------------------------------
# Secret key for cryptographic signing (CHANGE THIS IN PRODUCTION!)
# Generate a new one: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Debug mode (true/false)
# WARNING: NEVER set to true in production!
DEBUG=false

# Allowed hosts (comma-separated)
# Examples: localhost,127.0.0.1,your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF trusted origins (comma-separated, with protocol)
# Examples: https://your-domain.com,https://www.your-domain.com
# Leave empty if accessing by IP only
CSRF_TRUSTED_ORIGINS=

# ----------------------------------------------------------------------------
# REDIS (for WebSocket channel layer)
# ----------------------------------------------------------------------------
# Redis connection settings (optional - uses in-memory layer if not available)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# ----------------------------------------------------------------------------
# STARTUP AUTOMATION
# ----------------------------------------------------------------------------
# Run database migrations on container startup (true/false)
AUTO_MIGRATE=true

# Collect static files on container startup (true/false)
AUTO_COLLECTSTATIC=true

# ----------------------------------------------------------------------------
# EMAIL SETTINGS (for password reset)
# ----------------------------------------------------------------------------
# Email backend (smtp or console for testing)
EMAIL_BACKEND=smtp

# SMTP server settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true

# SMTP authentication
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Default sender email
DEFAULT_FROM_EMAIL=SweetMoney <your-email@gmail.com>

# ----------------------------------------------------------------------------
# LOGGING
# ----------------------------------------------------------------------------
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log to file (true/false)
LOG_TO_FILE=true

# ----------------------------------------------------------------------------
# DEMO MODE (for public demonstrations)
# ----------------------------------------------------------------------------
# Enable demo mode (true/false)
# WARNING: Demo mode disables destructive operations
DEMO_MODE=false

# Repository URL for demo banner
DEMO_REPO_URL=https://github.com/yourusername/sweetmoney

# ----------------------------------------------------------------------------
# ADVANCED SETTINGS
# ----------------------------------------------------------------------------
# Database connection timeout (seconds)
DB_TIMEOUT=5

# Maximum upload file size (MB)
MAX_UPLOAD_SIZE=10

# Session cookie age (seconds) - Default: 2 weeks
SESSION_COOKIE_AGE=1209600

# Enable HTTPS-only cookies (true/false)
# Set to true if using HTTPS
SESSION_COOKIE_SECURE=false
CSRF_COOKIE_SECURE=false
